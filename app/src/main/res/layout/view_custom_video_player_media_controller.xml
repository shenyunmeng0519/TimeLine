<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/bg_video_player_media_controller"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_play_custom_video_player_media_controller"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_custom_video_player_play" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:layout_weight="8"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekbar_progress_custom_video_player_media_controller"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:progressDrawable="@drawable/bg_custom_video_player_progress_bar"
                android:thumb="@drawable/ic_custom_video_player_progress_thumb"
                android:thumbOffset="1.5dp" />

            <TextView
                android:id="@+id/textview_time_custom_video_player_media_controller"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="-3dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="00:25/10:00"
                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageview_expand_custom_video_player_media_controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_custom_video_player_expand"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_shrink_custom_video_player_media_controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_custom_video_player_shrink"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>